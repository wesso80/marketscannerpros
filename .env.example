# Payment System Configuration
# Copy this to .env.local and fill in your values

# ==== Required Secrets ====
APP_SIGNING_SECRET=your-secret-key-here
DATABASE_URL=your-postgres-database-url

# ==== Paddle Configuration ====
# Set to 'sandbox' for testing, 'production' for live payments
PADDLE_ENVIRONMENT=sandbox
PADDLE_VENDOR_ID=your-paddle-vendor-id
PADDLE_API_KEY=your-paddle-api-key
PADDLE_PUBLIC_KEY_B64=your-paddle-public-key-base64
PADDLE_PRICE_PRO=pri_01your-paddle-price-id-pro
PADDLE_PRICE_PRO_TRADER=pri_01your-paddle-price-id-pro-trader

# ==== App URLs ====
NEXT_PUBLIC_APP_URL=https://marketscannerpros.app
NEXT_PUBLIC_MARKETING_URL=https://marketscannerpros.app

# ==== Checkout URLs ====
CHECKOUT_SUCCESS_URL=https://marketscannerpros.app/success
CHECKOUT_CANCEL_URL=https://marketscannerpros.app/cancel
PORTAL_RETURN_URL=https://marketscannerpros.app/account

# ==== Streamlit API URL (for billing client) ====
MARKET_API_URL=https://marketscannerpros.app