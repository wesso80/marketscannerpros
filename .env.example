# Payment System Configuration
# Copy this to .env.local and fill in your values

# ==== Required Secrets ====
APP_SIGNING_SECRET=your-secret-key-here
DATABASE_URL=your-postgres-database-url

# ==== Payment Feature Flag ====
# Set to "false" to keep everything FREE (production default)
# Set to "true" to enable payment system (testing only)
ENABLE_PAYMENTS=false

# ==== Stripe Configuration ====
# Only needed when ENABLE_PAYMENTS=true
STRIPE_SECRET_KEY=sk_test_... # Use sk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_... # Get from Stripe Dashboard > Webhooks
STRIPE_PRICE_PRO=price_... # Stripe price ID for Pro plan ($4.99/mo)
STRIPE_PRICE_PRO_TRADER=price_... # Stripe price ID for Pro Trader plan ($9.99/mo)

# ==== App URLs ====
NEXT_PUBLIC_APP_URL=https://marketscannerpros.app
NEXT_PUBLIC_MARKETING_URL=https://marketscannerpros.app

# ==== Checkout URLs ====
CHECKOUT_SUCCESS_URL=https://marketscannerpros.app/success
CHECKOUT_CANCEL_URL=https://marketscannerpros.app/cancel
PORTAL_RETURN_URL=https://marketscannerpros.app/account

# ==== Streamlit API URL (for billing client) ====
MARKET_API_URL=https://marketscannerpros.app
