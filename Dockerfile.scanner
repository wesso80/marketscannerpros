# Use Python 3.11 slim image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy requirements
COPY api/requirements.txt .

# Install dependencies with pre-built wheels
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy scanner code
COPY api/ ./api/

# Expose port
EXPOSE 8000

# Run the ENHANCED scanner service with all Alpha Vantage Premium APIs
# Supports: Daily/Weekly/Monthly, Adjusted Prices, Forex, Bulk Quotes
CMD ["uvicorn", "api.scanner_enhanced:app", "--host", "0.0.0.0", "--port", "8000"]
