modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "imagemagick_light", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib", "openssh", "zip", "dig", "iproute2", "gh"]

[deployment]
deploymentTarget = "autoscale"
run = [
  "streamlit",
  "run",
  "app.py",
  "--server.port",
  "5000",
  "--server.address",
  "0.0.0.0",
]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Market Scanner"

[[workflows.workflow]]
name = "Market Scanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"


[agent]
integrations = ["python_sendgrid:1.0.0"]

