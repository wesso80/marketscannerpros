language = "python"
run = "python -m uvicorn main:app --host 0.0.0.0 --port $PORT"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Webhook API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Dashboard"

[[workflows.workflow]]
name = "AI Webhook API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "AI Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run ai_learning_dashboard.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
