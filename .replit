modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[nix]
channel = "stable-25_05"
packages = ["android-tools", "cargo", "eas-cli", "freetype", "glibcLocales", "imagemagick_light", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjdk17", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Market Scanner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Apple IAP API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Market Data API"

[[workflows.workflow]]
name = "install_dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add yfinance pandas numpy requests python-dateutil"

[[workflows.workflow]]
name = "Market Scanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Apple IAP API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python iap_api.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Market Data API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python market_data_api.py"
waitForPort = 8001

[workflows.workflow.metadata]
outputType = "console"

