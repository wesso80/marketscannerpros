# Environment Variables for Production Deployment
# Copy this file to .env.local for development or set these in Vercel

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_... # Use your live Stripe secret key for production
STRIPE_PUBLISHABLE_KEY=pk_live_... # Use your live Stripe publishable key for production

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-here
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Database (if needed)
DATABASE_URL=your-database-connection-string

# Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com # Optional: for Plausible analytics