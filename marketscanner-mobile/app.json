{
  "expo": {
    "name": "MarketScanner",
    "slug": "marketscanner-mobile",
    "scheme": "marketscanner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-purchases",
        {
          "useAmazon": false
        }
      ],
      [
        "expo-notifications"
      ]
    ],
    "ios": {
      "bundleIdentifier": "app.marketscannerpros.mobile",
      "buildNumber": "7",
      "supportsTablet": true,
      "infoPlist": {
        "NSUserTrackingUsageDescription": "We use this to improve ads attribution and measure conversions.",
        "UIBackgroundModes": [
          "remote-notification"
        ]
      }
    },
    "android": {
      "package": "app.marketscannerpros.mobile",
      "versionCode": 7,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "eas": {
        "projectId": "REPLACE_ME_WITH_EAS_PROJECT_ID"
      }
    }
  }
}